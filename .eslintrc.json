{
    "root": true,
    "env": {
        "browser": true,
        "jest": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended",
        "plugin:react/all",
        "plugin:import/recommended",
        "plugin:flowtype/recommended",
        "plugin:jsx-a11y/recommended",
        "plugin:unicorn/recommended",
        "react-app"
    ],
    "ignorePatterns": [
        "node_modules/*",
        "build/*"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint",
        "flowtype",
        "jsx-a11y",
        "react",
        "react-hooks",
        "unicorn"
    ],
    "rules": {
        "eol-last": 2,
        "react/jsx-sort-props": "off",
        "@typescript-eslint/no-explicit-any": "off",
        "@typescript-eslint/explicit-module-boundary-types": "off",
        "@typescript-eslint/consistent-type-imports": "off",
        "@typescript-eslint/no-unnecessary-condition": "off",
        "@typescript-eslint/strict-boolean-expressions": "off",
        "quote-props": [ "error", "as-needed" ],
        "sort-vars": "off",
        "sort-keys": "off",
        "no-underscore-dangle": "off",
        "unicorn/no-array-for-each": "off",
        "no-void": "off",
        "no-console": "warn",
        "no-ternary": "off",
        "unicorn/prevent-abbreviations": "off",
        "import/no-unresolved": "off",
        "padded-blocks": "off",
        "no-plusplus": "off",
        "one-var": "off",
        "unicorn/prefer-spread": "off",
        "no-magic-numbers": "off",
        "@typescript-eslint/no-magic-numbers": "off",
        "no-warning-comments": "off",
        "unicorn/no-useless-undefined": "off",
        "dot-notation": "off",
        "consistent-return": "off",
        "react/jsx-one-expression-per-line": "off",
        "react/no-unstable-nested-components": "off",
        "@typescript-eslint/no-var-requires": "off",
        "array-element-newline": [ "error", "consistent" ],
        "array-bracket-newline": [ "error", "consistent" ],
        "id-length": "off",
        "func-names": ["error", "as-needed"],
        "function-call-argument-newline": ["error", "consistent"],
        "max-len": [2, { "code": 250, "tabWidth": 4, "ignoreUrls": true }],
        "max-lines-per-function": "off",
        "max-lines": ["error", { "max": 400, "skipBlankLines": true, "skipComments": true }],
        "max-params": ["error", 5],
        "no-extra-parens": ["off"],
        "multiline-comment-style": "off",
        "capitalized-comments": "off",
        "multiline-ternary": "off",
        "jsx-a11y/no-autofocus": "off",
        "import/named": "off",
        "array-callback-return": "off",
        "import/no-named-as-default": "off",
        "import/no-anonymous-default-export": "off",
        "unicorn/consistent-function-scoping": "off",
        "unicorn/no-abusive-eslint-disable": "off",
        "unicorn/no-array-reduce": "off",
        "@typescript-eslint/no-confusing-void-expression": "off",
        "@typescript-eslint/no-unsafe-call": "off",
        "@typescript-eslint/no-unsafe-assignment": "off",
        "react/jsx-curly-newline": "off",
        "@typescript-eslint/no-unsafe-member-access": "off",
        "@typescript-eslint/no-extra-parens": ["error", "all", { "enforceForArrowConditionals": false, "nestedBinaryExpressions": false, "ignoreJSX": "multi-line" }],
        "@typescript-eslint/no-unused-vars": "off",
        "no-unused-vars": "off",
        "object-curly-spacing": ["error", "always"],
        "@typescript-eslint/object-curly-spacing": ["error", "always"],
        "@typescript-eslint/explicit-function-return-type": ["error", { "allowExpressions": true }],
        "@typescript-eslint/prefer-readonly-parameter-types": "off",
        "react/function-component-definition": [2, { "namedComponents": "function-declaration" }],
        "react/jsx-fragments": "off",
        "@typescript-eslint/indent": "off",
        "react/jsx-indent-props": [0, "tab"],
        "react/jsx-handler-names": "off",
        "func-style": ["error", "declaration", { "allowArrowFunctions": true }],
        "react/jsx-closing-bracket-location": "off",
        "unicorn/no-nested-ternary": "off",
        "unicorn/no-null": "off",
        "react/require-default-props": "off",
        "max-statements": "off",
        "@typescript-eslint/no-empty-function": "off",
        "react/jsx-no-literals": "off",
        "no-undefined": "off",
        "@typescript-eslint/no-type-alias": ["error", { "allowAliases": "in-unions-and-intersections" }],
        "object-property-newline": ["error", { "allowAllPropertiesOnSameLine": true }],
        "radix": ["error", "as-needed"],
        "react-hooks/rules-of-hooks": "warn",
        "react-hooks/exhaustive-deps": "off",
        "react/forbid-component-props": [2, { "forbid": [{ "propName": "className", "allowedFor": ["Link", "Nav", "Paper", "ReactLoading", "Table", "TableBody", "TableCell", "Toolbar", "Modal", "Button", "FloatingButtonContainerStyled", "WrapperStyled", "Dialog"] }] }],
        "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx", ".ts", ".tsx"] }],
        "react/jsx-max-depth": [2, { "max": 10 }],
        "react/jsx-max-props-per-line": [2, { "when": "multiline" }],
        "react/jsx-no-bind": [2, { "allowArrowFunctions": true }],
        "react/jsx-no-leaked-render": "off",
        "react/hook-use-state": "off",
        "sort-imports": "off",
        "unicorn/filename-case": "off",
        "@typescript-eslint/naming-convention": [
            "error",
            { "selector": "enumMember", "format": ["UPPER_CASE"] }
        ]
    },
    "settings": {
        "flowtype": { "onlyFilesWithFlowAnnotation": false },
        "import/resolver": { "node": { "extensions": [".js", ".jsx"] } },
        "react": { "version": "detect" }
    }
}
